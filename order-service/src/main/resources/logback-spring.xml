<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="false">
    <!-- Spring application name'i context'e al -->
    <springProperty scope="context"
                    name="serviceName"
                    source="spring.application.name"/>

    <!-- CONSOLE APPENDER (yerel geliştirme için) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level [%X{traceId:-},%X{spanId:-}] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- LOGSTASH APPENDER (production için) -->
    <appender name="LOGSTASH"
              class="net.logstash.logback.appender.LogstashTcpSocketAppender">
        <destination>${LOGSTASH_HOST:-logstash}:${LOGSTASH_PORT:-5000}</destination>

        <!-- JSON formatında log gönderme encoder'ı -->
        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp/>                    <!-- Log zamanı -->
                <loggerName/>                   <!-- Logger adı -->
                <threadName/>                   <!-- Thread adı -->
                <logLevel/>                     <!-- Log seviyesi (INFO, ERROR, etc.) -->
                <pattern>
                    <pattern>{
                        "service.name" : "${serviceName:-unknown}",
                        "trace.id": "%X{traceId:-}",
                        "span.id": "%X{spanId:-}",
                        "correlation.id": "%X{correlationId:-}",
                        "message": "%msg"
                        }</pattern>
                </pattern>
                <mdc/>                          <!-- MDC (Mapped Diagnostic Context) bilgileri -->
                <stackTrace/>                   <!-- Hata durumunda stack trace -->
            </providers>
        </encoder>

        <!-- Bağlantı kesilirse yeniden dene -->
        <connectionTTL>5 minutes</connectionTTL>
        <keepAliveDuration>5 minutes</keepAliveDuration>
        <reconnectionDelay>10 seconds</reconnectionDelay>
    </appender>

    <!-- ROOT LOGGER: Hangi appender'ları kullanacak? -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>           <!-- Konsola da yazdır -->
        <appender-ref ref="LOGSTASH"/>          <!-- Logstash'e de gönder -->
    </root>

    <!-- Özel logger'lar (isteğe bağlı) -->
    <logger name="org.springframework" level="INFO"/>
    <logger name="com.netflix.eureka" level="WARN"/>
    <logger name="org.hibernate" level="WARN"/>
</configuration>